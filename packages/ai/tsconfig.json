{
    "extends": "@anycrawl/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "lib": [
            "dom",
            "es2019"
        ],
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
